{% extends 'base.html.twig' %}

{% block title %}Lodging{% endblock %}

{% block body %}
    <h1>Lodging</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lodging.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ lodging.name }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ lodging.adress }}</td>
            </tr>
            <tr>
                <th>Price_per_night</th>
                <td>{{ lodging.pricePerNight }}</td>
            </tr>
            <tr>
                <th>Animals_allowed</th>
                <td>{{ lodging.animalsAllowed ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Simple_bed_count</th>
                <td>{{ lodging.simpleBedCount }}</td>
            </tr>
            <tr>
                <th>Double_bed_count</th>
                <td>{{ lodging.doubleBedCount }}</td>
            </tr>
            <tr>
                <th>Bedroom_count</th>
                <td>{{ lodging.bedroomCount }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ lodging.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_lodging_index') }}">back to list</a>

    <a href="{{ path('app_lodging_edit', {'id': lodging.id}) }}">edit</a>

    {{ include('lodging/_delete_form.html.twig') }}
{% endblock %}
